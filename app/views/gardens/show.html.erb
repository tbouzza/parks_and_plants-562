<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>


<div class="container mt-4">
  <div class="row justify-content-center">
    <% @garden.plants.each do |plant| %>
    <div class="col-4">

      <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= plant.name %>

        <%= link_to 'delete', plant_path(plant), method: 'delete', class: 'btn btn-danger position-absolute delete-button' %>
      </div>

    </div>
    <% end %>
  </div>


  <%= link_to new_garden_plant_path(@garden), class: 'btn btn-success' do %>
    <h2 class="mb-0 rounded">+</h2>
  <% end %>
</div>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
